<!DOCTYPE html>
<html lang="fr-FR">
<head>
    <title>{% block title %}Emakina.FR{% endblock %} | Apéritips</title>
    <link rel="shortcut icon" href="{{ asset('assets/images/favicon.ico') }}">
    <meta charset="UTF-8">

    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('assets/styles/main.css') }}">
    {% endblock %}

    {% block socialSharing %}{% endblock %}
</head>
<body>
{% block body %}
    {% block push %}{% endblock %}

    {% block header %}
        <header>
            <div class="header-container">
                <h1 class="logo">
                    <a href="https://emakina.fr/" title="Emakina.FR" target="_blank">
                        <span class="hidden">Emakina</span>
                        <img src="{{ asset('assets/images/logo_simple.svg') }}" alt="Emakina">
                    </a>
                </h1>

                <nav id="nav" role="navigation">
                    <ul>
                        <li class="primary">
                            <a href="{{ path('homepage') }}#actus" title="Programme">
                                Actus
                            </a>
                        </li>
                        <li class="primary">
                            <a href="{{ path('homepage') }}#prochains-sujets" title="Prochains sujets">
                                Prochains sujets
                            </a>
                        </li>
                        <li class="primary">
                            <a href="{{ path('homepage') }}#participants" title="Participant">
                                Participant
                            </a>
                        </li>
                        <li class="primary">
                            <a href="{{ path('homepage') }}#archive" title="Archive">
                                Archive
                            </a>
                        </li>
                        <li class="primary dropdown">
                            <a href="#" data-dropdown="userDropdown">{{ app.user.username }}</a>
                            <div id="userDropdown" class="dropdown-content">
                                <ul class="dropdown-item">
                                    <li>
                                        <a href="{{ path('user_profil', {'slug': app.user.slug}) }}">Profil</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('user_settings') }}">Settings</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('logout') }}">Logout</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </nav>
            </div>
        </header>
    {% endblock %}

    {% block main %}
        <main>
            {% block mainContent %}{% endblock %}
        </main>

        {% block footer %}
            <footer>
                Emakina © 2017 - Technologie Team Emakina
            </footer>
        {% endblock %}
    {% endblock %}
{% endblock %}

{% block javascript %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="{{ asset('assets/js/main.js') }}"></script>
{% endblock %}
</body>
</html>
