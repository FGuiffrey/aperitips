{% extends "::base.html.twig" %}

{% from '::elements/macro.html.twig' import flash %}

{% block title %}Profil de {{ user.username }}{% endblock %}


{% block mainContent %}
    <section class="user-profile user-profile-edit-infos">
        {{ flash() }}
        <h2 class="primary">Modifier mes informations</h2>

        <div class="infos-container">
            <div class="side side--left">
                <img src="{{ vich_uploader_asset(user, 'pictureFile') }}" alt="User Profile Image" class="user-img-profile">
            </div>

            <div class="side side--right">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
